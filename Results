#include <stdlib.h>

// Step i: Define the structure
struct Student {
    char name[50];
    char regNo[20];
    float totalMarks;
};

int main() {
    FILE *file_ptr;
    struct Student s;

    // Step ii: Open the binary file for reading
    file_ptr = fopen("results.dat", "rb"); // rb = read binary

    if (file_ptr == NULL) {
        printf("Error: Could not open file 'results.dat'.\n");
        exit(1);
    }

