#include <stdio.h>

int main() {
    float balance, withdraw;

    // Ask user for initial account balance
    printf("Enter initial account balance: ");
    scanf("%f", &balance);

    // Loop until balance becomes zero or negative
    while (balance > 0) {
        printf("\nEnter amount to withdraw: ");
        scanf("%f", &withdraw);

        balance -= withdraw; // Deduct the withdrawn amount

        if (balance > 0) {
            printf("Remaining balance: %.2f\n", balance);
        } else {
            printf("Balance is now %.2f â€” account is empty or overdrawn.\n", balance);
        }
    }

    printf("\nTransaction complete.\n");

    return 0;
}
